#!/bin/bash

if [ -z "$1" ]
then
	exit 0
fi
VID=$(lspci -n|grep "$1"|head -n1|cut -f4 -d":");   
BUS=$(lspci -n|grep "$1"|head -n1|cut -f1 -d" ");   
DIP=$(lspci -n|grep "$1"|head -n1|cut -f5 -d":"|cut -f1 -d" ");
OIP=$(lspci -n|grep "$1"|head -n1|cut -f2 -d" "|cut -f1 -d":");
NAME=$(lspci|grep "$BUS"|head -n1|cut -f4 -d":");
 
DRIVER=$(cat /proc/bus/pci/devices |grep ${VID}${DIP} |head -n1|cut -f18|uniq|sort)
DATA=$(echo "$NAME;$DRIVER")
echo $DATA
         
